<% script(['xterm', 'xterm.fit']) %>
<% style(['xterm', 'sitestats']) %>

<div class="form-group">
	<label class="col-sm-2 control-label">Stats:</label>
	<div class="col-sm-10 controls site-control">
		<div data-site-stats data-site-id="<%= data.value %>">
		</div>
		<div>
			<button class="btn btn-success" data-start-process data-site-id="<%= data.value %>">Start new process</button>
		</div>
	</div>
</div>
<div class="form-group terminal">
	<div id="terminal"></div>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">Logs:</label>
	<div class="col-sm-10 controls site-control">
		<div data-site-logs data-site-id="<%= data.value %>">
		</div>
		<div id="sitelogview" style="background:black;color:white;padding:10px;white-space:pre;"></div>
	</div>
</div>